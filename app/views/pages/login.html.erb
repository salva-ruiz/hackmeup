<div class="columns">
  <div class="column is-one-third">

    <div class="card">
      <div class="card-header">
        <h1 class="card-header-title"> Login </h1>
      </div>
      <div class="card-content bg-primary">

        <%= form_tag sign_in_url do |f| %>
          <div class="field">
            <%= label_tag :email, 'Usuario', class: 'label' %>
            <div class="control">
              <%= text_field_tag :email, '', placeholder: 'E-mail', class: 'input', autofocus: true %>
            </div>
          </div>

          <div class="field">
            <%= label_tag :password, 'ContraseÃ±a', class: 'label' %>
            <div class="control">
              <%= password_field_tag :password, '', class: 'input' %>
            </div>
          </div>

          <%= submit_tag 'Enviar', class: 'button is-primary is-fullwidth' %>
        <% end %>

      </div>
    </div>

  </div>
</div>
