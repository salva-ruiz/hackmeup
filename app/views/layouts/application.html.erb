<!DOCTYPE html>
<html>
  <head>
    <meta charset='utf-8'>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    <%= tag.title content_for?(:page_title) ? yield(:page_title) : 'HACK ME UP!' %>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application' %>
  </head>
  <body>
    <section class="section">
      <div class="container">

        <% if flash[:notice] %>
          <div class="notification is-info"> <button class="delete"></button> <%= flash[:notice] %> </div>
        <% end %>

        <% if flash[:alert] %>
          <div class="notification is-warning"> <button class="delete"></button> <%= flash[:alert] %> </div>
        <% end %>

        <%= yield %>
      </div>
    </section>
  </body>
</html>
